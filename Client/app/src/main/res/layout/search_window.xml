<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="52dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_marginStart="5dip"
            android:layout_marginLeft="5dip"
            android:layout_weight="1"
            android:fontFamily="@font/monoton_regular"
            android:gravity="fill"
            android:text="Port:"
            android:textColor="#8E24AA"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/portText"
            android:layout_width="0dip"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:ems="15"
            android:fontFamily="@font/hellodenverdisplayregular"
            android:inputType="textPersonName"
            android:paddingLeft="10dip"
            android:paddingTop="2dip"
            android:paddingRight="10dip"
            android:paddingBottom="2dip"
            android:radius="5dip"
            android:text="5555"
            android:backgroundTint="#8E24AA"
            android:textColor="#8E24AA"
            android:textSize="26dp" />

        <ImageButton
            android:id="@+id/serverSearchButton"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:layout_weight="0"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_search"
            android:contentDescription="@string/todo"
            android:onClick="searchServers"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="?attr/selectableItemBackgroundBorderless"
            android:textColor="#FFF"
            android:textSize="24sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#1DDA00FF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/progress_loader"
            style="?android:attr/progressBarStyle"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:indeterminateDrawable="@drawable/progress"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <ListView
            android:id="@+id/server_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible" />
    </LinearLayout>

</LinearLayout>